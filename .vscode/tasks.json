{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ctx: Show Status",
      "type": "shell",
      "command": "ctx",
      "args": ["status"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ctx: Add Note",
      "type": "shell",
      "command": "ctx",
      "args": ["note", "${input:noteText}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
